<Window x:Class="DemoEkzLeto.ClientOrder"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DemoEkzLeto"
        mc:Ignorable="d"
        Title="ClientOrder" Height="267.6" Width="356.8" WindowState="Maximized" Background="White">
    <Grid>
        <StackPanel>
            <StackPanel>
                <TextBlock Text="Услуги к заказу" Style="{StaticResource TitleStyle}"/>
            </StackPanel>
            <StackPanel>
                <TextBlock Foreground="#FF498C51" FontSize="25" x:Name="ServicesList"/>
                <TextBlock Margin="10,0,0,0" FontSize="20">Длительность брони (в минутах)</TextBlock>
                <TextBox Margin="10,10,10,10" x:Name="OrderTime" Width="200" Height="30" FontSize="15" HorizontalAlignment="Center"/>
                <Button FontSize="20" Margin="10,10,10,10" x:Name="Apply" Content="Принять" Width="100" HorizontalAlignment="Center" Click="Apply_Click" RenderTransformOrigin="2.068,0.89"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
